<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <padding android:top="5dp" android:bottom="5dp" android:left="10dp" android:right="10dp"/>
            <stroke android:width="1dp" android:color="@color/black"></stroke>
            <gradient 
                android:angle="90"
                android:startColor="@color/white"
                android:endColor="@color/white"/>
        </shape>
    </item>
    
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <padding android:top="5dp" android:bottom="5dp" android:left="10dp" android:right="10dp"/>
            <stroke android:width="0.1dp" android:color="@color/black"></stroke>
            <gradient 
                android:angle="90"
                android:startColor="@color/cinzafundo"                
                android:endColor="@color/cinzafundo"/>
        </shape>
    </item>

</selector>